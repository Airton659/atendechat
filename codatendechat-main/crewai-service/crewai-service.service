[Unit]
Description=CrewAI Service - Atendechat
After=network.target

[Service]
Type=simple
User=airton
WorkingDirectory=/home/airton/atendechat/codatendechat-main/crewai-service/api/src
Environment="PATH=/home/airton/atendechat/codatendechat-main/crewai-service/venv/bin:/usr/bin:/usr/local/bin"
Environment="PYTHONPATH=/home/airton/atendechat/codatendechat-main/crewai-service/api/src"
EnvironmentFile=/home/airton/atendechat/codatendechat-main/crewai-service/.env
ExecStart=/home/airton/atendechat/codatendechat-main/crewai-service/venv/bin/python -m uvicorn main:app --host 0.0.0.0 --port 8000
Restart=on-failure
RestartSec=10
StartLimitBurst=3
StartLimitIntervalSec=60
KillMode=mixed
KillSignal=SIGTERM
TimeoutStopSec=10

[Install]
WantedBy=multi-user.target
